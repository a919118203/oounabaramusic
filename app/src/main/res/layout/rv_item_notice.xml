<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_comment_item">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_header"
        android:src="@mipmap/choose_login"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/user_name"
        android:text="用户名用户名用户名用户名用户名用户名用户名用户名用户名"
        android:textSize="@dimen/font_medium_size"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:maxWidth="100dp"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/user_header"
        android:layout_alignTop="@id/user_header"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="赞了你的评论："
        android:textSize="@dimen/font_medium_size"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/user_name"
        android:layout_alignTop="@id/user_name"
        android:gravity="center_vertical"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/my_comment"
        android:text="这是我的评论"
        android:textSize="@dimen/font_small_size"
        android:textColor="@color/positive"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/user_name"
        android:layout_alignStart="@id/user_name"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="2018年4月1日"
        android:textSize="@dimen/font_ssmall_size"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/user_name"
        android:layout_marginEnd="20dp"
        tools:ignore="HardcodedText" />

</RelativeLayout>