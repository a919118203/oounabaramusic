<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_ripple_rectangle">

    <com.oounabaramusic.android.widget.customview.MyCircleImageView
        android:id="@+id/user_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/friend_name"
        android:textSize="@dimen/font_medium_size"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/positive"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_header"
        android:layout_alignTop="@id/user_header"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/friend_sex"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_toEndOf="@id/friend_name"
        android:layout_alignBottom="@id/friend_name"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="3dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/friend_introduction"
        android:textSize="@dimen/font_small_size"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_name"
        android:layout_alignStart="@id/friend_name"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/friend_menu"
        android:src="@mipmap/my_playlist_menu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:background="@drawable/view_ripple_rectangle"
        tools:ignore="ContentDescription" />

    <TextView
        android:visibility="gone"
        android:id="@+id/friend_follow"
        android:text="+ 关注"
        android:textSize="@dimen/font_small_size"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue_border"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:visibility="gone"
        android:id="@+id/cancel_follow"
        android:text="已关注"
        android:textSize="@dimen/font_small_size"
        android:textColor="@color/negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gray_border"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        tools:ignore="HardcodedText" />

</RelativeLayout>