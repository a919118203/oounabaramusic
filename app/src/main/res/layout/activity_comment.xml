<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_size"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/comment_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/view_ripple_rectangle">

                <ImageView
                    android:id="@+id/cover"
                    android:src="@mipmap/choose_login"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"/>

                <com.oounabaramusic.android.widget.textview.TextViewBigFont
                    android:id="@+id/name"
                    android:text="名字"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/positive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cover"
                    android:layout_alignTop="@id/cover"
                    android:layout_toStartOf="@id/arrow"
                    android:layout_marginTop="10dp"
                    tools:ignore="HardcodedText" />

                <com.oounabaramusic.android.widget.textview.TextViewMediumFont
                    android:id="@+id/author"
                    android:text="作者"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cover"
                    android:layout_toStartOf="@id/arrow"
                    android:layout_below="@id/name"
                    android:layout_marginTop="3dp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/arrow"
                    android:src="@mipmap/right_arrow"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="35dp"
                    android:paddingBottom="35dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="20dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/negative"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.oounabaramusic.android.widget.textview.TextViewMediumFont
                    android:text="当前评论"
                    android:textColor="@color/positive"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="HardcodedText" />

                <include layout="@layout/recyclerview_item_comment"/>
            </LinearLayout>

            <com.oounabaramusic.android.widget.textview.TextViewMediumFont
                android:text="精彩评论"
                android:textColor="@color/positive"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                tools:ignore="HardcodedText" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wonderful_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.oounabaramusic.android.widget.textview.TextViewMediumFont
                android:text="最新评论"
                android:textColor="@color/positive"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                tools:ignore="HardcodedText" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/latest_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/negative"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:hint="发私信..."
                android:textSize="16sp"
                android:id="@+id/message_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                tools:ignore="HardcodedText" />

            <com.oounabaramusic.android.widget.textview.TextViewMediumFont
                android:text="发送"
                android:textColor="@color/positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>