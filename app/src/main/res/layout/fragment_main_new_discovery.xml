<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <TextView
            android:id="@+id/tv1"
            android:text="每日推荐"
            android:textSize="@dimen/font_small_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/view_pager"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv2"
            android:text="为你精心挑选店长推荐"
            android:textSize="@dimen/font_medium_size"
            android:textColor="@color/positive"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_alignStart="@id/tv1"
            android:layout_marginTop="5dp"
            tools:ignore="HardcodedText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"/>

        <TextView
            android:text="播放全部"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gray_border"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/tv2"
            android:layout_marginEnd="20dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv3"
            android:text="推荐歌单"
            android:textSize="@dimen/font_small_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view_1"
            android:layout_alignStart="@id/tv1"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv4"
            android:text="人气的歌单"
            android:textSize="@dimen/font_medium_size"
            android:textColor="@color/positive"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv3"
            android:layout_alignStart="@id/tv1"
            android:layout_marginTop="5dp"
            tools:ignore="HardcodedText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv4"/>

        <TextView
            android:id="@+id/check_more"
            android:text="查看更多"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gray_border"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/tv4"
            android:layout_marginEnd="20dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv5"
            android:text="排行榜"
            android:textSize="@dimen/font_small_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view_2"
            android:layout_alignStart="@id/tv1"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv6"
            android:text="大家都在听的歌"
            android:textSize="@dimen/font_medium_size"
            android:textColor="@color/positive"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv5"
            android:layout_alignStart="@id/tv5"
            android:layout_marginTop="5dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/play_all"
            android:text="播放全部"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gray_border"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/tv6"
            android:layout_marginEnd="20dp"
            tools:ignore="HardcodedText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv6"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>