<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/background_comment_item">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_header"
        android:src="@mipmap/choose_login"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <com.oounabaramusic.android.widget.textview.TextViewMediumFont
        android:id="@+id/user_name"
        android:text="用户名用户名用户名用户名用户名用户名用户名用户名用户名用户名用户名"
        android:textColor="@color/colorPrimary"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:maxWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_header"
        android:layout_alignTop="@id/user_header"
        android:layout_marginStart="10dp"
        tools:ignore="HardcodedText" />

    <com.oounabaramusic.android.widget.textview.TextViewMediumFont
        android:id="@+id/theme"
        android:text="分享单曲："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@id/user_name"
        android:layout_alignTop="@id/user_name"
        tools:ignore="HardcodedText" />

    <com.oounabaramusic.android.widget.textview.TextViewSmallFont
        android:id="@+id/post_time"
        android:text="06:52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_alignStart="@id/user_name"
        android:layout_alignBottom="@id/user_header"
        android:gravity="bottom"
        tools:ignore="HardcodedText" />

    <com.oounabaramusic.android.widget.textview.TextViewMediumFont
        android:id="@+id/post_content"
        android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
        android:textColor="@color/positive"
        android:maxLines="8"
        android:lineSpacingExtra="5dp"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_time"
        android:layout_alignStart="@id/post_time"
        android:layout_marginTop="15dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/post_image"
        android:src="@mipmap/choose_login"
        android:scaleType="centerCrop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/post_content"
        android:layout_alignStart="@id/post_content"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/post_deputy_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_image"
        android:layout_alignStart="@id/post_content">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/post_music"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/post_music_background">

            <ImageView
                android:id="@+id/music_cover"
                android:src="@mipmap/choose_login"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"/>

            <com.oounabaramusic.android.widget.textview.TextViewMediumFont
                android:id="@+id/music_name"
                android:text="歌名"
                android:textColor="@color/positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/music_cover"
                android:layout_alignTop="@id/music_cover"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />

            <com.oounabaramusic.android.widget.textview.TextViewSmallFont
                android:id="@+id/music_singer"
                android:text="歌手"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/music_name"
                android:layout_alignStart="@id/music_name"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/post_music_background">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.oounabaramusic.android.widget.textview.TextViewMediumFont
                    android:text="\@Mogeko：内容"
                    android:maxLines="10"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <com.oounabaramusic.android.widget.textview.TextViewMediumFont
                    android:text="\@Mogeko："
                    android:textColor="@color/colorPrimary"
                    android:lineSpacingExtra="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
            </FrameLayout>

            <com.oounabaramusic.android.widget.textview.TextViewMediumFont
                android:visibility="gone"
                android:text="查看全文"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:visibility="gone"
                android:src="@mipmap/title_page"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_forward_music">

                <ImageView
                    android:id="@+id/forward_music_cover"
                    android:src="@mipmap/choose_login"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"/>

                <com.oounabaramusic.android.widget.textview.TextViewMediumFont
                    android:id="@+id/forward_music_name"
                    android:text="歌名"
                    android:textColor="@color/positive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/forward_music_cover"
                    android:layout_alignTop="@id/forward_music_cover"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:ignore="HardcodedText" />

                <com.oounabaramusic.android.widget.textview.TextViewSmallFont
                    android:id="@+id/forward_music_singer"
                    android:text="歌手"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/forward_music_name"
                    android:layout_alignStart="@id/forward_music_name"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/post_forward"
        android:src="@mipmap/forward"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/post_deputy_content"
        android:layout_alignStart="@id/post_content"
        android:layout_marginTop="15dp"/>

    <com.oounabaramusic.android.widget.textview.TextViewSmallFont
        android:id="@+id/post_forward_1"
        android:text="转发"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/post_forward"
        android:layout_alignBottom="@id/post_forward"
        android:layout_marginStart="2dp"
        android:gravity="center_vertical"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/post_comment"
        android:src="@mipmap/comment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/post_forward_1"
        android:layout_alignBottom="@id/post_forward_1"
        android:layout_marginStart="30dp"/>

    <com.oounabaramusic.android.widget.textview.TextViewSmallFont
        android:id="@+id/post_comment_1"
        android:text="评论"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/post_comment"
        android:layout_alignBottom="@id/post_comment"
        android:layout_marginStart="2dp"
        android:gravity="center_vertical"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/post_good"
        android:src="@mipmap/no_good"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/post_comment_1"
        android:layout_alignBottom="@id/post_comment_1"
        android:layout_marginStart="30dp"/>

    <com.oounabaramusic.android.widget.textview.TextViewSmallFont
        android:id="@+id/post_good_1"
        android:text="赞"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/post_good"
        android:layout_alignBottom="@id/post_good"
        android:layout_marginStart="2dp"
        android:gravity="center_vertical"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/post_delete"
        android:src="@mipmap/delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/post_good_1"
        android:layout_alignBottom="@id/post_good_1"
        android:layout_marginStart="30dp"/>

    <com.oounabaramusic.android.widget.textview.TextViewSmallFont
        android:id="@+id/post_delete_1"
        android:text="删除"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/post_delete"
        android:layout_alignBottom="@id/post_delete"
        android:layout_marginStart="2dp"
        android:gravity="center_vertical"
        tools:ignore="HardcodedText" />
</RelativeLayout>